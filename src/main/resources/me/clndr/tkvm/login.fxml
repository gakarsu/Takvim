<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.clndr.tkvm.LoginController">
    <Label text="Kullanıcı Adı:" />
    <TextField fx:id="usernameField" />

    <Label text="Şifre:" />
    <PasswordField fx:id="passwordField" />

    <Button text="Giriş Yap" onAction="#loginButtonClicked" />

    <Button text="Kayıt Ol" onAction="#registerButtonClicked" />
</VBox>
